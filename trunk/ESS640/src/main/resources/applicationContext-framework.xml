<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
     xsi:schemaLocation="
	     http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd
	     http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">
	
	<bean class="com.norming.ess.framework.service.impl.UserMenuImpl">
		<property name="resource" value="/resources/menus/essmenu.xml"></property>
	</bean>
	
	<bean class="com.norming.ess.framework.service.impl.LoginServiceImpl">
		<property name="loginDao" ref="loginDao"></property>
	</bean>
	
	<bean id="loginDao" class="com.norming.ess.framework.dao.impl.LoginDaoImpl">
		<property name="dataSource" ref="dynamicDataSource"></property>
	</bean>
</beans>